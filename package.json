{
  "name": "andydo-codesprout",
  "displayName": "andydo.codesprout",
  "description": "Grow your code, water your self.",
  "version": "0.0.3",
  "publisher": "andydo-cascadia-font",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "/media/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeSprout-container",
          "title": "CodeSprout",
          "icon": "media/sprout-icon.svg"
        }
      ]
    },
    "views": {
      "codeSprout-container": [
        {
          "id": "codeSprout-view",
          "name": "My Garden",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "CodeSprout",
      "properties": {
        "codeSprout.interval": {
          "type": "number",
          "default": 45,
          "description": "Minutes between water reminders"
        },
        "codeSprout.height": {
          "type": "number",
          "default": 170,
          "description": "Your height in centimeters"
        },
        "codeSprout.weight": {
          "type": "number",
          "default": 65,
          "description": "Your weight in kilograms"
        },
        "codeSprout.dailyWaterTarget": {
          "type": "number",
          "default": 0,
          "description": "Daily water target in ml (0 = auto-calculate)"
        },
        "codeSprout.overhydrationThreshold": {
          "type": "number",
          "default": 150,
          "description": "Overhydration warning threshold as percentage of daily target (0 = disabled)"
        },
        "codeSprout.useMLRecommendations": {
          "type": "boolean",
          "default": false,
          "description": "Use machine learning to provide personalized water intake recommendations"
        },
        "codeSprout.age": {
          "type": "number",
          "default": 30,
          "description": "Your age in years"
        },
        "codeSprout.gender": {
          "type": "string",
          "enum": ["male", "female", "other"],
          "default": "other",
          "description": "Your gender for personalized recommendations"
        },
        "codeSprout.activityLevel": {
          "type": "string",
          "enum": ["sedentary", "light", "moderate", "active", "very_active"],
          "default": "moderate",
          "description": "Your activity level for personalized recommendations"
        },
        "codeSprout.climate": {
          "type": "string",
          "enum": ["cold", "temperate", "hot"],
          "default": "temperate",
          "description": "Your local climate for personalized recommendations"
        },
        "codeSprout.waterPerDrink": {
          "type": "number",
          "default": 250,
          "description": "Amount of water in ml consumed per drink (default: 250ml)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "bugs": {
    "url": "https://github.com/DoVuDung/andydo.codesprout/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DoVuDung/andydo.codesprout.git"
  },
  "homepage": "https://github.com/DoVuDung/andydo.codesprout/blob/main/README.md",
  "documentation": "https://github.com/DoVuDung/andydo.codesprout/blob/main/USAGE.md"
}
