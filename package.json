{
  "name": "codesprout",
  "displayName": "CodeSprout - Water Reminder & Wellness Companion",
  "description": "Grow your code, water your self.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeSprout-container",
          "title": "CodeSprout",
          "icon": "media/sprout-icon.svg"
        }
      ]
    },
    "views": {
      "codeSprout-container": [
        {
          "id": "codeSprout-view",
          "name": "My Garden",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "CodeSprout",
      "properties": {
        "codeSprout.interval": {
          "type": "number",
          "default": 45,
          "description": "Minutes between water reminders"
        },
        "codeSprout.height": {
          "type": "number",
          "default": 170,
          "description": "Your height in centimeters"
        },
        "codeSprout.weight": {
          "type": "number",
          "default": 65,
          "description": "Your weight in kilograms"
        },
        "codeSprout.dailyWaterTarget": {
          "type": "number",
          "default": 0,
          "description": "Daily water target in ml (0 = auto-calculate)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "bugs": {
    "url": "https://github.com/your-username/codesprout/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/codesprout.git"
  },
  "homepage": "https://github.com/your-username/codesprout/blob/main/README.md"
}